<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary20"
    tools:context=".FirstFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="260dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/ReleaseDatetextView"
        android:layout_width="163dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textColor="#FEFEFE"
        app:layout_constraintEnd_toEndOf="@+id/TitletextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TitletextView"
        app:layout_constraintTop_toBottomOf="@+id/TitletextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date:"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ReleaseDatetextView"
        app:layout_constraintEnd_toEndOf="@+id/ReleaseDatetextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ReleaseDatetextView"
        app:layout_constraintTop_toBottomOf="@+id/TitletextView"
        app:layout_constraintVertical_bias="0.736" />

    <TextView
        android:id="@+id/TitletextView"
        android:layout_width="326dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/DescriptiontextView"
        android:layout_width="334dp"
        android:layout_height="138dp"
        android:layout_marginBottom="100dp"
        android:text="TextView"
        android:textColor="#FEFEFE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/daysTillReleasetextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/daysTillReleasetextView" />

    <TextView
        android:id="@+id/daysTillReleasetextView"
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FEFEFE"
        app:layout_constraintBottom_toTopOf="@+id/DescriptiontextView"
        app:layout_constraintEnd_toEndOf="@+id/ReleaseDatetextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ReleaseDatetextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Days Till Release"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/daysTillReleasetextView"
        app:layout_constraintEnd_toEndOf="@+id/daysTillReleasetextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/daysTillReleasetextView"
        app:layout_constraintTop_toBottomOf="@+id/ReleaseDatetextView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Next Release"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/DescriptiontextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/DescriptiontextView"
        app:layout_constraintTop_toBottomOf="@+id/DescriptiontextView"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>